@model bug_tracker.Models.RoleManager
@{
    ViewBag.Title = "Edit";
}
<section class="content-wrap">
    <h2>Manage @Model.RoleName Role</h2>
    <hr />
    <div class="row">
        <div class="col-sm-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span>Manage users for this role.</span>
                    <br />
                </div>
                <div class="panel-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12">
                                <p>Manage Users:</p>
                                @using (Html.BeginForm())
                                {
                                    @Html.HiddenFor(model => model.RoleName)
                                    @Html.HiddenFor(model => model.RoleId)
                                    @Html.AntiForgeryToken()
                                    @Html.ListBox("Selected", Model.Users, htmlAttributes: new { @multiple = "multiple", id = "my-select" })
                                    <br />
                                    <input type="submit" value="Save" class="btn btn-primary grey-gradient" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-md-12">
            <a href="@Url.Action("Index")">Back to User Control</a>
        </div>
    </div>
</section>

@section scripts{
    <script>
        $(window).load(function () {
            $('#my-select').multiSelect();
        });
    </script>
}
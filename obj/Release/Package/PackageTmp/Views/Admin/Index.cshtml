@{
    ViewBag.Title = "Index";
}
<h2>Admin's Role Editing Station</h2>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.RoleList)
        {
            if (role.Name == "Global Admin") { }
            else { 
            <tr>
                <td>@role.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Admin", new { RoleName = role.Name })" class="btn btn-primary grey-gradient">Manager Users</a>
                </td>
            </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <td>Users not in a role</td>
            <td>
                <a href="#noRoles" class="btn btn-primary grey-gradient" data-toggle="modal"><i class="fa fa-search-plus"></i>View</a>
                <div class="modal fade" id="noRoles" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">Users with no Role &nbsp; <span class="fa fa-group fa-2x"></span></h4>
                            </div>
                            <div class="modal-body">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>User</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in Model.noRoles)
                                        {
                                            <tr>
                                                <td>
                                                    @user.Email
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    </tfoot>
</table>
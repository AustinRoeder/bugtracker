@model bug_tracker.Models.ProjectManager
@{
    ViewBag.Title = "Project User Handling";
}
<section class="content-wrap">
    <h2>Manage Users for @Model.ProjectName</h2>
    <hr />
    <div class="row">
        <div class="col-sm-10">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12">
                                <p>Manage Users:</p>
                                @using (Html.BeginForm())
                                {
                                    @Html.HiddenFor(model => model.ProjectId)
                                    @Html.AntiForgeryToken()
                                    @Html.ListBox("Selected", Model.Users, htmlAttributes: new { @multiple = "multiple", id = "my-select" })
                                    <br />
                                    <input type="submit" value="Save" class="btn btn-primary grey-gradient" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <a href="@Url.Action("Index")">Back to Project Index</a>
        </div>
    </div>
</section>

@section scripts
{
    <script src="~/Scripts/jquery.multi-select.js" type="text/javascript"></script>
    <script>
   $(document).ready(function () {
       $('#my-select').multiSelect()
   })
    </script>
}